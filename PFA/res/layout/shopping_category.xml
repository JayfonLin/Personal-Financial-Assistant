<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_dark"
        android:text="添加分类"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <LinearLayout android:id="@+id/title_layout" android:orientation="horizontal"
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  android:gravity="center_horizontal" android:background="@android:color/holo_orange_light">
  <TextView
		      android:id="@+id/goods"
		      android:padding="5dip"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:gravity="center"
		      android:singleLine="true"
		      android:ellipsize="marquee"
		      android:textColor="@android:color/white"
		      android:textSize="20dp"
		      android:text="类别"
		      
		      android:layout_weight="1" />

		 <View android:layout_width="1dip" android:layout_height="fill_parent" android:background="#FF909090" /> 

		 <TextView
		     android:id="@+id/source"
		     android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		     android:padding="5dip"
		     android:text="物品"
		     android:textColor="@android:color/white"
		      android:textSize="20dp"
		     android:layout_weight="1"
		     android:gravity="center"
		      android:singleLine="true"
		      android:ellipsize="marquee" />

		
 </LinearLayout>

    <ListView
        android:id="@+id/table_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:cacheColorHint="#00000000" />

</LinearLayout>